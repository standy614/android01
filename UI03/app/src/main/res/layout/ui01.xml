<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4">

    <LinearLayout
        android:layout_weight="0.105"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#3AAC80">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送至："
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/adress"
            android:layout_gravity="center"
            >

        </Spinner>


    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_weight="0.075"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner"
            >
        <ImageButton
            android:paddingRight="0dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/images_27"/>
        <EditText
            android:paddingLeft="0dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#E4E4E4"
            android:hint="搜索附近商品"
            android:singleLine="true"
            android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_weight="0.187"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/images_07">
        
    </ImageView>
    <LinearLayout
        android:layout_weight="0.146"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/images_08">

    </ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_09">

        </ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_10">

        </ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_11">

        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.146"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_12">

        </ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_13">

        </ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_14">

        </ImageButton>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_15">

        </ImageButton>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.169"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_17">

        </ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/images_18">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.086"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/images_20">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.086">
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/images_21">

        </ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/images_22">

        </ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/images_23">

        </ImageButton>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/images_24">

        </ImageButton>
    </LinearLayout>

</LinearLayout>